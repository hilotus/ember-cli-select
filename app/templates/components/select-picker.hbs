<a class="select-picker-single {{if isActive 'select-picker-single-with-drop'}}" {{action 'toggle'}}>
  <span>{{title}}</span>
  <div>
    {{#if isActive}}
      <i class="fa fa-caret-up"></i>
    {{else}}
      <i class="fa fa-caret-down"></i>
    {{/if}}
  </div>
</a>
<div class="select-picker-drop">
  <div class="select-picker-search">
    {{input type="text" autocomplete="off" value=keywords}}<i class="fa fa-search"></i>
  </div>
  <ul class="select-picker-results">
    {{#each searchContent as |item index|}}
      {{#if isMultiple}}
        {{select-picker-multip-list-item content=item}}
      {{else}}
        {{select-picker-single-list-item content=item}}
      {{/if}}
    {{/each}}
  </ul>
</div>
